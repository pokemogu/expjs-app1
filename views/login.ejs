<html lang="ja">
  <head>
    <meta charset="utf-8"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>ログイン</title>
  </head>
  <body>
    <ul class="nav justify-content-end nav-pills">
      <li class="nav-item"><a class="nav-link active" href="/login">ログイン</a></li>
      <li class="nav-item"><a class="nav-link" href="/register">ユーザー登録</a></li>
    </ul>
    <div class="card"><div class="card-header">ログイン</div><div class="card-body">
      <% if(typeof status !== 'undefined'){ %>
        <div class="alert alert-danger" role="alert">
            <% if(status === 'failed'){ %>
                ログインに失敗しました。
            <% } %>
        </div>
    <% } %>
    <form method="POST" action="/login">
      <div class="form-group row">
        <label for="username_input" class="col-sm-2 col-form-label">メールアドレス</label>
        <div class="col-sm-10">
          <input type="email" name="username" id="username_input" placeholder="メールアドレス"></input>
        </div>
      </div>
      <div class="form-group row">
        <label for="password_input" class="col-sm-2 col-form-label">パスワード</label>
        <div class="col-sm-10">
          <input type="password" name="password" id="password_input"  placeholder="パスワード"></input>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <input class="btn btn-primary" type="submit" value="ログイン"></input>
        </div>
      </div>
    </form>
    </div></div>
  </body>
</html>
